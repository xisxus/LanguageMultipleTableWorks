@using LanguageInstall.Service 
@inject LanguageInstall.Service.Service.ILocalizationService TranslationService 

@functions {
    public async Task<string> TranslateAsync(string key, string languageCode)
    {
        return await TranslationService.GetTranslationAsync(key, languageCode);
    }

    public async Task<string> TranslateAsyncInd(string key, string languageCode)
    {
        return await TranslationService.GetTranslationAsyncInd(key, languageCode);
    }
}
